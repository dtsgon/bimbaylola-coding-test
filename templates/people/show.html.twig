{% extends 'base.html.twig' %}

{% block title %}People{% endblock %}

{% block body %}
    <h1>People</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ person.birthDate ? person.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Death_date</th>
                <td>{{ person.deathDate ? person.deathDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Birth_place</th>
                <td>{{ person.birthPlace }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_people_index') }}">back to list</a>

    <a href="{{ path('app_people_edit', {'id': person.id}) }}">edit</a>

    {{ include('people/_delete_form.html.twig') }}
{% endblock %}
